<Window x:Class="tsSearch.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tsSearch"
        mc:Ignorable="d"
        Title="ConfigWindow" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="30*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="tbapi"  Grid.ColumnSpan="4" Grid.RowSpan="5" ScrollViewer.HorizontalScrollBarVisibility="Auto" Margin="10"/>
        <Button x:Name="btGet" Content="取得" Width="100" Height="30" Click="btGet_Click" Grid.Row="6" Grid.Column="0" Margin="20" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Button x:Name="btEnd" Content="終了" Width="100" Height="30" Click="Button_Click"  Grid.Row="6" Grid.Column="3" Margin="20" HorizontalAlignment="Right" VerticalAlignment="Center"/>

    </Grid>
</Window>
