<Window x:Class="tsSearch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tsSearch"
        mc:Ignorable="d"
        Title="本検索システム" Height="500" Width="750">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="15*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Right"  Grid.Row="1"  Text="タイトル" VerticalAlignment="Center" Margin="30" FontSize="18"/>
        <TextBlock HorizontalAlignment="Right"  Grid.Row="2"  Text="著者" VerticalAlignment="Center" Margin="30" FontSize="18"/>
        <TextBlock HorizontalAlignment="Right"  Grid.Row="3"  Text="出版社" VerticalAlignment="Center"  Margin="30" FontSize="18"/>
        <TextBox x:Name="tbTitle" Grid.Column="1" Grid.ColumnSpan="2"  Height="25" Margin="33" Grid.Row="1"  Width="300"/>
        <TextBox x:Name="tbAuthor" Grid.Column="1" Grid.ColumnSpan="2"  Height="25" Margin="33" Grid.Row="2"  Width="300" />
        <ListBox x:Name="lbPublisher" Grid.Column="1" Grid.ColumnSpan="2"  Height="25" Margin="33" Grid.Row="3"  Width="300"/>
        <Button x:Name="btSearch" Content="検索" Grid.Column="3"   Grid.Row="4" VerticalAlignment="Center" Width="75" Height="50"/>
        <Frame Name="frame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
